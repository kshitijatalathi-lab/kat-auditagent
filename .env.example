# Backend mock/testing configuration
# Enable token-free mock mode for LLM calls
LLM_MOCK=1

# Preferred LLM provider (auto|gemini|openai|groq)
LLM_PROVIDER=groq

# Provider API keys (optional when LLM_MOCK=1)
#OPENAI_API_KEY=
#GROQ_API_KEY=
#GOOGLE_API_KEY=
#GEMINI_API_KEY=

# Models (optional overrides)
#OPENAI_MODEL=gpt-4o-mini
#GROQ_MODEL=llama3-8b-8192
#GEMINI_MODEL=gemini-1.5-flash

# Vertex AI (optional)
#GCP_PROJECT=
#GCP_LOCATION=us-central1
#VERTEX_EMBED_MODEL=text-embedding-004

# Frontend -> Backend base URL (used by Next.js tests/scripts)
NEXT_PUBLIC_API_BASE=http://127.0.0.1:8000
